# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

# It's recommended to keep these unchanged
end_of_line = lf
charset = utf-8

[*.md]
trim_trailing_whitespace = false
